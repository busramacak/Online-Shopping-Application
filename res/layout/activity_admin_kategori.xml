<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminKategoriActivity">
    
    <TextView
        android:id="@+id/slogan_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Yeni Ürün Ekle"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Linear1_kategori_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_kategori"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/tisort"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/tisort" />
        <ImageView
            android:id="@+id/spor"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/spor" />

        <ImageView
            android:id="@+id/elbise"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/elbise" />

        <ImageView
            android:id="@+id/dis_giyim"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/dis_giyim" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear2_kategori_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear1_kategori_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/gozluk"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gozluk" />

        <ImageView
            android:id="@+id/canta"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/canta"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/sapka"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sapka"/>

        <ImageView
            android:id="@+id/ayakkabi"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/ayakkabi"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear2_kategori_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/kulaklik"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kulaklik" />

        <ImageView
            android:id="@+id/bilgisayar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bilgisayar"
            android:layout_marginStart="17dp"/>

        <ImageView
            android:id="@+id/saat"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/saat"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/telefon"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/telefon" />

    </LinearLayout>


    <Button
        app:backgroundTint="@null"
        android:id="@+id/sipKontroluBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/urunDuzenleBtn"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:textColor="@color/sellerr"
        android:background="@drawable/sellerinpt"
        android:text="Yeni Sipariş Kontrolü"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <Button
        app:backgroundTint="@null"
        android:id="@+id/urunDuzenleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adminCikisBtn"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:textColor="@color/sellerr"
        android:background="@drawable/sellerinpt"
        android:text="Ürünleri Düzenle"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <Button
        app:backgroundTint="@null"
        android:id="@+id/adminCikisBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:background="@drawable/sellerbtn"
        android:text="Çıkış Yap"
        android:textSize="15sp"
        android:textAllCaps="false" />




</RelativeLayout>