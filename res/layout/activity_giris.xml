<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"
    tools:context=".Alicilar.GirisActivity">

    <ImageView
        android:id="@+id/giris_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/dd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/girisTelefon_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giris_applogo"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Telefon Numarası"
        android:inputType="phone"
        android:textColor="@color/buton"
        android:textColorHint="@color/buton"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/girisSifre_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/girisTelefon_input"
        android:background="@drawable/input"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="şifre"
        android:inputType="textPassword"
        android:textColor="@color/buton"
        android:textColorHint="@color/buton"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/girisSifre_input"
        android:layout_marginTop="50dp">

        <com.rey.material.widget.CheckBox
            android:id="@+id/hatirla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="Beni hatırla"
            android:textColor="@color/buton"
            app:cbd_strokeColor="@color/buton"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/sifremiUnuttum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifremi Unuttum"
            android:textColor="@color/buton"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"/>

    </LinearLayout>

    <Button
        app:backgroundTint="@null"
        android:id="@+id/giris_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/linear1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buton"
        android:padding="15dp"
        android:text="Giriş Yap"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adminPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yöneticiyim"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/buton"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/notAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yönetici Değilim"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="30dp"
        android:visibility="invisible"/>

</RelativeLayout>