<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/r10"
    android:layout_height="match_parent"
    tools:context=".Alicilar.SifremiUnuttumActivity">




    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buton"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/baslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Şifre Sıfırla"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/sifremiUnuttum_telNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon Numaranızı girin.."
        android:gravity="center"
        android:layout_below="@id/r11"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="14dp"
        android:backgroundTint="@color/buton"/>

    <TextView
        android:id="@+id/guvSorusuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/sifremiUnuttum_telNo"
        android:background="@drawable/kutu"
        android:padding="15dp"
        android:gravity="center"
        android:text="Aşağıdaki güvenlik sorularını cevaplayın.."
        android:textSize="20sp"/>



    <EditText
        android:id="@+id/soru1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guvSorusuText"
        android:hint="Evcil hayvanının adı nedir?"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:backgroundTint="@color/buton"/>

    <EditText
        android:id="@+id/soru2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soru1"
        android:hint="En sevdiğin süper kahraman nedir?"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:backgroundTint="@color/buton"/>


    <Button
        app:backgroundTint="@null"
        android:id="@+id/sbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soru2"
        android:text="Onayla"
        android:textAllCaps="false"
        android:layout_marginTop="45dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:background="@drawable/buton"/>


</RelativeLayout>