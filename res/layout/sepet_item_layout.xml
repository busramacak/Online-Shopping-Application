<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/gri">

        <TextView
            android:id="@+id/urunAdiSepet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Adı"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/urunFiyatiSepet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Fiyatı"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TL"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/urunFiyatiSepet"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/cerceve">

            <TextView
                android:id="@+id/eksiBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/urunSayisiSepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/artiBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/cop"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cop"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>