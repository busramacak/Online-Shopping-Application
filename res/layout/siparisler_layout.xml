            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textSize="17dp"
            android:layout_marginLeft="30dp"/>


        <TextView
            android:id="@+id/sipKullaniciNumara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TelNo"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/sipKullaniciAdi"/>

        <LinearLayout
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sipKullaniciNumara"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/sipUrunFiyati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürün Fiyatı"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/sipKullaniciAdi"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TL"
                android:textColor="@color/black"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/sipKullaniciAdi"
                android:layout_toEndOf="@+id/sipUrunFiyati"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>



        <TextView
            android:id="@+id/sipAdres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres"
            android:textColor="@color/black"
            android:layout_below="@+id/r4"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/sipTarihSaat"
