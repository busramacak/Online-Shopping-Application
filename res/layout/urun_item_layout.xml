<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gri">

        <TextView
            android:id="@+id/urun_adi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Adı"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/buton"/>

        <ImageView
            android:id="@+id/urun_resmi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/urun_adi"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/urun_fiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urun_resmi"
            android:text="Ürün Fiyatı"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/buton"/>

        <TextView
            android:id="@+id/urun_cesidi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urun_fiyati"
            android:text="Ürün Çeşidi"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/buton"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>